
<div class="terroir-form">
  <fieldset>
    <legend>Please Log In</legend>

    <% form_tag do %>
      <p>
        <label for="name">Nom:</label>
        <%= text_field_tag :nom, params[:nom] %>
      </p>

      <p>
        <label for="password">Mot de passe:</label>
        <%= password_field_tag :password, params[:password] %>
      </p>

      <p>
        <%= submit_tag "Login" %>
      </p>
    <% end %>
  </fieldset>
</div>
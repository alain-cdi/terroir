<div id="produit-list">
  <h1>Listing de tous les  produits</h1>

  <table cellpadding="5" cellspacing="0">

    <% @produits.each do |produit| %>
      <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">


        <td>
          <img class="list-image" src="<%= produit.image_url %>"/>
        </td>

        <td width="100%">
          <span class="list-title"><%= h(produit.libelle) %></span><br />
          <%= h(truncate(produit.libelle, :length => 180)) %>
        </td>

        <td class="list-actions">
          <%= link_to 'Show', :action => 'show', :id => produit %><br/>
          <%= link_to 'Edit', :action => 'edit', :id => produit %><br/>
          <%= link_to 'Destroy', { :action  => 'destroy', :id => produit },
            :confirm => "Are you sure?",
            :method  => :post %>
        </td>
      </tr>
    <% end %>
  </table>

  <br />
</div>
<%= link_to 'New Produit', new_produit_path %>
